<%- include('./layouts/header.ejs') -%>
  <%- include('./layouts/skins.ejs') -%>
    <%- include('./layouts/sidebar.ejs') -%>

      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <p class="card-title">Advanced Table</p>
                  <div class="row">
                    <div class="col-12">
                      <div class="table-responsive">
                        <table id="" class="display expandable-table" style="width:100%">
                          <thead>
                            <tr>
                              <th>custommer</th>
                              <th>Product</th>
                              <th>quantity</th>
                              <th>Amount</th>
                              <th>Payment Method</th>
                              <th>Payment</th>
                              <th>Date</th>
                              <th>Order Status</th>

                            </tr>
                          </thead>
                          <tbody>
                            <%  for (let orders of getAllOrders){ %>
                             <% for (let prod of orders.products){ %> 
                                <tr data-toggle="collapse" data-target="#collapseExample">
                                  <td>
                                    <%=orders.userId.name %>
                                  </td>
                                  <td>
                                    <%= prod.product.name%>
                                  </td>
                                  <td>
                                    <%= prod.quantity%>
                                  </td>
                                  <td>
                                    <%= prod.totalPrice %>
                                  </td>
                                  <td>
                                    <%= orders.paymentMethod %>
                                  </td>
                                  <td>
                                    <%= orders.payment %>
                                  </td>
                                  <td>
                                    <%= moment(orders.date).format('LL') %>
                                  </td>
                                  <td>
                                    <% if (prod.status == 'Order Confirme'){ %>
                                    <button type="button" class="btn btn-inverse-secondary btn-fw">Secondary</button>
                                    <% }else if(prod.status == 'Packed'){ %> 
                                      <% }else if(prod.status == 'Shipped'){ %> 
                                        <% }else if(prod.status == 'Delvered'){ %> 
                                          <% }else{ %> 
                                            <% } %> 
                                  </td>

                                </tr>
                                <% } %>
                                  <% } %>


                          </tbody>

                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>


            </div>
          </div>
        </div>
      </div>

      <%- include('./layouts/footer.ejs') -%>