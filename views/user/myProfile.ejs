<%- include('./layouts/profile-header.ejs') %>

  <div class=" p-5 user-info border col rounded ">
    <form action="/my-profile" method="post">
      <div class="d-flex justify-content-between">
        <h4> Personal Information</h4>
        <button class="btn border text-white "
          style="background-image: linear-gradient(to bottom, rgb(61, 167, 216), rgb(2, 63, 104)); "
